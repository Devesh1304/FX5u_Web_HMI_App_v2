        margin-top: 15px;
        padding: 10px;
        border-radius: 5px;
        font-weight: 500;
        text-align: left;
        min-height: 1.5em;
    }

        .write-status.success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

    .data-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        table-layout: fixed;
    }

        .data-table th, .data-table td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: center;
            vertical-align: middle;
        }

        .data-table th, .data-table .row-label {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .data-table .row-label {
            text-align: left;
        }

    .register-item {
        margin-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .register-item label {
            flex: 0 0 250px;
            margin-right: 15px;
            font-weight: 600;
            color: #5a6268;
            text-align: left;
        }

        .register-item input, .register-item .read-only-value {
            flex-grow: 1;
        }

    .hmi-btn {
        flex-grow: 1;
        padding: 15px;
        font-size: 1.1em;
        font-weight: bold;
        color: white;
        border: 2px solid #343a40;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, visibility 0.3s ease;
    }

    .btn-green {
        background-color: #28a745;
    }

    .btn-red {
        background-color: #dc3545;
    }

    .btn-blue {
        background-color: #007bff;
    }

    .button-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(4, 1fr);
        gap: 10px;
        margin-top: 20px;
    }
</style>

