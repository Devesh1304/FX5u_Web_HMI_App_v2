        async function performActionsAndAwait(actions) {
                     // A Map to store the final calculated value for each register we need to update.
                     const registersToUpdate = new Map();

                     // Step 1: Loop through all actions to calculate the final value for each register.
                     for (const action of actions) {
                         if (action.type === 'momentary') continue; // Skip momentary actions

                         const registerName = action.register;

                         // Get the current value, either from our map if we've already modified it,
                         // or from the global state if this is the first time we're seeing this register.
                         let currentValue = registersToUpdate.has(registerName)
                             ? registersToUpdate.get(registerName)
                             : registerValues[registerName];

                         let newValue = currentValue;
                         if (action.type === 'toggle') {
                             newValue ^= (1 << action.position);
                         } else if (action.type === 'set') {
                             newValue |= (1 << action.position);
                         } else if (action.type === 'reset') {
                             newValue &= ~(1 << action.position);
                         }

                         // Store the newly calculated value back in our map.
                         registersToUpdate.set(registerName, newValue);
                     }

                     // Step 2: Now that all calculations are done, send one write command for each register.
                     const writePromises = [];
                     for (const [registerName, finalValue] of registersToUpdate) {
                         writePromises.push(writeRegister(registerName, finalValue.toString()));
                     }

                     // Wait for all the unique write commands to complete.
                     return Promise.all(writePromises);
                 }

        function updateButtonStyles() {
            for (const buttonId in buttonConfig) {
                const config = buttonConfig[buttonId];
                const button = document.getElementById(buttonId);
                if (!button) continue;

                if (config.actions && config.actions.length > 0) {
                    const action = config.actions.find(a => a.type === 'toggle' || a.type === 'momentary');
                    if (action) {
                        const isBitOn = (registerValues[action.register] >> action.position) & 1;
                        button.classList.toggle('btn-green', isBitOn);
                        button.classList.toggle('btn-red', !isBitOn);
                    } else {
                        button.classList.add('btn-red');
                    }
                }

                if (config.visibilityBit) {
                    const isVisible = (registerValues[config.visibilityBit.register] >> config.visibilityBit.position) & 1;
                    button.style.visibility = isVisible ? 'visible' : 'hidden';
                }
            }
        }
        async function fetchData() {
            try {
                const response = await fetch('?handler=ReadRegisters');
                if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
                const data = await response.json();
                updateUI(data);
            } catch (error) {
                updateUI({ connectionStatus: "Fetch Error", errorMessage: error.message });
            }
        }

        // --- THIS FUNCTION IS NOW CORRECTED ---
            async function writeRegister(name, value) {
                    writeStatusMessageDiv.textContent = `Sending new value for ${name}...`;
                    writeStatusMessageDiv.className = 'write-status';

                    let valueToSend = value;
                    if (fieldsToDivideBy10.includes(name)) {
                        const floatValue = parseFloat(value);
                        if (!isNaN(floatValue)) {
                            valueToSend = Math.round(floatValue * 440).toString();
                        } else {
                            writeStatusMessageDiv.textContent = `Invalid number format for ${name}.`;
                            writeStatusMessageDiv.className = 'write-status error';
                            return;
                        }
                    }

                    try {
                        const response = await fetch(`?handler=WriteRegister`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                // CORRECTED: This selector now finds the token anywhere on the page
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            },
                            body: JSON.stringify({ RegisterName: name, Value: valueToSend })
                        });

                        if (!response.ok) throw new Error(`Server responded with status ${response.status}`);

                        const result = await response.json();
                        writeStatusMessageDiv.textContent = result.message;
                        writeStatusMessageDiv.className = `write-status ${result.status.toLowerCase()}`;
                        await fetchData();
                    } catch (error) {
                        writeStatusMessageDiv.textContent = `Write failed: ${error.message}`;
                        writeStatusMessageDiv.className = 'write-status error';
                    }
                }

         async function writeBit(address, value) {
            // This function doesn't need to return a complex promise,
            // as it's for a quick side-effect.
            try {
                await fetch(`?handler=WriteBit`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ Address: address, Value: value })
                });
            } catch (error) {
                console.error(`Write bit failed for ${address}:`, error);
            }
        }
        async function fetchModbusData() {
                   try {
                       const response = await fetch('?handler=ReadRegisters');
                       if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
                       const data = await response.json();
                       updateUI(data);
                   } catch (error) {
                       updateUI({ connectionStatus: "Fetch Error", errorMessage: error.message });
                   }
               }
 document.addEventListener('DOMContentLoaded', () => {
            // Event listener for writable input fields... (this part is correct)
            allRegisterIds.forEach(id => {
                const input = document.getElementById(id);
                if (input && input.tagName === 'INPUT') {
                    input.addEventListener('keydown', (e) => {
                        if (e.key === 'Enter') {
                            e.preventDefault();
                            input.blur();
                          //  writeRegister(id, input.value);
                        }
                    });
                           input.addEventListener('change', () => {
                            writeRegister(id, input.value);
                    });
                }
            });

            // --- THIS IS THE CORRECT, UNIFIED EVENT HANDLER ---
                   document.querySelectorAll('.hmi-interactive-btn').forEach(button => {
                       const config = buttonConfig[button.id];
                       if (!config) return;

                       const isPrimaryActionMomentary = config.actions.some(a => a.type === 'momentary');

                       if (isPrimaryActionMomentary) {
                           const action = config.actions.find(a => a.type === 'momentary');

                           // --- Mousedown event handler (PRESS) ---
                           const pressAction = async () => {
                               // --- THIS IS THE CORRECTED LOGIC ---
                               // First, check the condition bit before doing anything
                               if (config.conditionBit) {
                                   const isConditionBitHigh = (registerValues[config.conditionBit.register] >> config.conditionBit.position) & 1;
                                   let isBlocked = false;

                                   if (config.conditionBehavior === 'allowOnHigh') {
                                       if (!isConditionBitHigh) isBlocked = true; // Block if bit is LOW
                                   } else {
                                       if (isConditionBitHigh) isBlocked = true; // Default: Block if bit is HIGH
                                   }

                                   if (isBlocked) {
                                       writeStatusMessageDiv.textContent = `Action for ${button.id} prevented: Condition not met.`;
                                       writeStatusMessageDiv.className = 'write-status error';
                                       button.setAttribute('data-is-blocked', 'true'); // Mark as blocked
                                       return; // Stop the action
                                   }
                               }

                               // If not blocked, proceed with the action
                               button.setAttribute('data-is-blocked', 'false');
                               let newValue = registerValues[action.register] | (1 << action.position);
                               await writeRegister(action.register, newValue.toString());
                               await fetchModbusData();
                           };

                           // --- Mouseup event handler (RELEASE) ---
                           const releaseAction = async () => {
                               // Only perform the release action if the press action was not blocked
                               if (button.getAttribute('data-is-blocked') === 'true') {
                                   return;
                               }
                               let newValue = registerValues[action.register] & ~(1 << action.position);
                               await writeRegister(action.register, newValue.toString());
                               await fetchModbusData();
                           };

                           button.addEventListener('mousedown', pressAction);
                           button.addEventListener('mouseup', releaseAction);
                           button.addEventListener('mouseleave', releaseAction);
                           button.addEventListener('touchstart', (e) => { e.preventDefault(); pressAction(); });
                           button.addEventListener('touchend', (e) => { e.preventDefault(); releaseAction(); });

                       } else {
                           // Logic for standard CLICK buttons
                           button.addEventListener('click', async () => {
                               try {
                                   if (config.conditionBit) {
                                       const isConditionBitHigh = (registerValues[config.conditionBit.register] >> config.conditionBit.position) & 1;
                                       let isBlocked = false;
                                       if (config.conditionBehavior === 'allowOnHigh') {
                                           if (!isConditionBitHigh) isBlocked = true;
                                       } else {
                                           if (isConditionBitHigh) isBlocked = true;
                                       }
                                       if (isBlocked) {
                                           writeStatusMessageDiv.textContent = `Action for ${button.id} prevented: Condition not met.`;
                                           writeStatusMessageDiv.className = 'write-status error';
                                           return;
                                       }
                                   }
                                   await performActionsAndAwait(config.actions);
                                   await fetchModbusData();
                                   if (config.redirect) {
                                       window.location.href = config.redirect;
                                   }
                               } catch (error) {
                                   console.error("Write failed:", error);
                                   writeStatusMessageDiv.textContent = `Error: ${error.message}`;
                                   writeStatusMessageDiv.className = 'write-status error';
                               }
                           });
                       }

                       // Logic for the MOMENTARY SIDE-EFFECT
                       if (config.momentarySideEffect) {
                           const address = config.momentarySideEffect.address;
                           const press = async () => {
                               await writeBit(address, true);
                               await fetchModbusData();
                           };
                           const release = async () => {
                               await writeBit(address, false);
                               await fetchModbusData();
                           };
                           button.addEventListener('mousedown', press);
                           button.addEventListener('mouseup', release);
                           button.addEventListener('mouseleave', release);
                           button.addEventListener('touchstart', (e) => { e.preventDefault(); press(); });
                           button.addEventListener('touchend', (e) => { e.preventDefault(); release(); });
                       }
                   });

            // Initial data fetch and set up recurring update
            fetchData();
            setInterval(fetchData, 1000);
        });
    </script>
