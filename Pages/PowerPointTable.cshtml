    }

    input[type="number"] {
        text-align: right;
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        font-size: 1.05em;
        box-sizing: border-box;
    }

    .read-only-value {
        font-weight: bold;
        color: #0056b3;
        text-align: right;
        padding: 10px;
        font-size: 1.05em;
