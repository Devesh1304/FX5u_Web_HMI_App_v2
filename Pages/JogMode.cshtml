   async function performActionsAndAwait(actions) {
            // A Map to store the final calculated value for each register we need to update.
            const registersToUpdate = new Map();

            // Step 1: Loop through all actions to calculate the final value for each register.
            for (const action of actions) {
                if (action.type === 'momentary') continue; // Skip momentary actions

                const registerName = action.register;

                // Get the current value, either from our map if we've already modified it,
                // or from the global state if this is the first time we're seeing this register.
                let currentValue = registersToUpdate.has(registerName)
                    ? registersToUpdate.get(registerName)
                    : registerValues[registerName];

                let newValue = currentValue;
                if (action.type === 'toggle') {
                    newValue ^= (1 << action.position);
                } else if (action.type === 'set') {
                    newValue |= (1 << action.position);
                } else if (action.type === 'reset') {
                    newValue &= ~(1 << action.position);
                }

                // Store the newly calculated value back in our map.
                registersToUpdate.set(registerName, newValue);
            }

            // Step 2: Now that all calculations are done, send one write command for each register.
            const writePromises = [];
            for (const [registerName, finalValue] of registersToUpdate) {
                writePromises.push(writeRegister(registerName, finalValue.toString()));
            }

            // Wait for all the unique write commands to complete.
            return Promise.all(writePromises);
        }

        function updateButtonStyles() {
            for (const buttonId in buttonConfig) {
                const config = buttonConfig[buttonId];
                const button = document.getElementById(buttonId);
                if (!button) continue;

                // Handle button color
                // First, check for the new 'statusBit' property for indicator-only buttons
                if (config.statusBit) {
                    const isBitOn = (registerValues[config.statusBit.register] >> config.statusBit.position) & 1;
                    button.classList.toggle('btn-green', isBitOn);
                    button.classList.toggle('btn-red', !isBitOn);
                }
                // If it's not an indicator, fall back to the old logic for action buttons
                else if (config.actions && config.actions.length > 0) {
                    const action = config.actions.find(a => a.type === 'toggle' || a.type === 'momentary');
                    if (action) {
                        const isBitOn = (registerValues[action.register] >> action.position) & 1;
                        button.classList.toggle('btn-green', isBitOn);
                        button.classList.toggle('btn-red', !isBitOn);
                    } else {
                        // Default color for buttons with no toggle/momentary action (e.g., reset-only)
                        button.classList.remove('btn-green');
                        button.classList.add('btn-red');
                    }
                }



                // Handle visibility (this logic doesn't need to change)
                if (config.visibilityBit) {
                    const visRegister = config.visibilityBit.register;
                    const visPosition = config.visibilityBit.position;
                    const isVisible = (registerValues[visRegister] >> visPosition) & 1;
                    button.style.visibility = isVisible ? 'hidden' : 'visible';
                }
            }
        }

             function updateUI(data) {
            const statusDiv = document.getElementById('connectionStatus');
            const errorDiv = document.getElementById('errorMessage');

            statusDiv.className = `status-message ${data.connectionStatus.toLowerCase().includes('connected') ? 'status-connected' : 'status-disconnected'}`;
            errorDiv.style.display = data.errorMessage ? 'block' : 'none';
            errorDiv.innerHTML = data.errorMessage ? `<strong>Error:</strong> ${data.errorMessage}` : '';
            statusDiv.textContent = `Connection Status: ${data.connectionStatus}`;

            // Update writable inputs
            writableRegisterIds.forEach(id => {
                const input = document.getElementById(id);
                const dataKey = id.charAt(0).toLowerCase() + id.slice(1);
                if (input && document.activeElement !== input && data[dataKey] !== undefined) {
                     let displayValue = data[dataKey];
                     if (fieldsToDivideBy10timer.includes(id)) {
                        displayValue = (data[dataKey] / 10.0).toFixed(1);
                     }
                     input.value = displayValue;
                }
            });

            // Update read-only spans
            readOnlyRegisterIds.forEach(id => {
                const span = document.getElementById(id);
                const dataKey = id.charAt(0).toLowerCase() + id.slice(1);
                if (span && data[dataKey] !== undefined) {
                    let displayValue = data[dataKey];
                    if (fieldsToDivideBy10timer.includes(id)) {
                        displayValue = (data[dataKey] / 10.0).toFixed(1);
                    }
                    else if (fieldsToDivideBy10.includes(id)) {
                        displayValue = (data[dataKey] / 440.0).toFixed(1);
                    }
                    span.textContent = displayValue;
                }
            });

            // --- LOGIC TO CONTROL THE LAMPS (NOW IN THE CORRECT PLACE) ---
            const y4Indicator = document.getElementById('y4-status-indicator');
            const y5Indicator = document.getElementById('y5-status-indicator');

            if (y4Indicator && y5Indicator && data.outputStatusBits !== undefined) {
                // Check if bit 0 is ON for Y4
                const isY4On = (data.outputStatusBits >> 0) & 1;
                y4Indicator.classList.toggle('led-on', isY4On);

                // Check if bit 1 is ON for Y5
                const isY5On = (data.outputStatusBits >> 1) & 1;
                y5Indicator.classList.toggle('led-on', isY5On);
            }
            // --- END OF CORRECTED LOGIC ---

            // Update local registerValues for button logic
            for (const key in registerValues) {
                const dataKey = key.charAt(0).toLowerCase() + key.slice(1);
                if (data[dataKey] !== undefined) {
                    registerValues[key] = data[dataKey];
                }
            }

            updateButtonStyles();
        }

        async function fetchModbusData() {
            try {
                const response = await fetch('/JogMode?handler=ReadRegisters');
                if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
                const data = await response.json();
                updateUI(data);
            } catch (error) {
                updateUI({ connectionStatus: "Fetch Error", errorMessage: error.message });
            }
        }

        async function writeRegister(name, value) {
                   writeStatusMessageDiv.textContent = `Sending new value for ${name}...`;
                   writeStatusMessageDiv.className = 'write-status';

                   let valueToSend = value;
                   if (fieldsToDivideBy10timer.includes(name)) {
                       const floatValue = parseFloat(value);
                       if (!isNaN(floatValue)) {
                           valueToSend = Math.round(floatValue * 10).toString();
                       } else {
                           writeStatusMessageDiv.textContent = `Invalid number format for ${name}.`;
                           writeStatusMessageDiv.className = 'write-status error';
                           return;
                       }
                   }

                   try {
                       const response = await fetch(`/JogMode?handler=WriteRegister`, {
                           method: 'POST',
                           headers: {
                               'Content-Type': 'application/json',
                               // CORRECTED: This selector now finds the token anywhere on the page
                               'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                           },
                           body: JSON.stringify({ RegisterName: name, Value: valueToSend })
                       });

                       if (!response.ok) throw new Error(`Server responded with status ${response.status}`);

                       const result = await response.json();
                       writeStatusMessageDiv.textContent = result.message;
                       writeStatusMessageDiv.className = `write-status ${result.status.toLowerCase()}`;
                       await fetchData();
                   } catch (error) {
                       writeStatusMessageDiv.textContent = `Write failed: ${error.message}`;
                       writeStatusMessageDiv.className = 'write-status error';
                   }
               }
