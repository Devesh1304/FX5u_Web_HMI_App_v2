@page
@model FX5u_Web_HMI_App.Pages.PointTable1Model
@{
    ViewData["Title"] = "Point Table 1" ;
}
<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.6);
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: #fefefe;
        color: #333;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 500px;
        border-radius: 10px;
        position: relative;
        text-align: center;
    }

    .close-button {
        color: #aaa;
        position: absolute;
        top: 10px;
        right: 20px;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

    .modal-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }
    .hmi-container {
        display: flex;
        flex-direction: column;
        height: 100vh;
        width: 100%;
        background-color: #000080; /* Dark blue background */
        color: #FFF;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow: hidden;
    }
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #e9ecef;
        color: #343a40;
    }

    .container {
        background-color: #fff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        max-width: 900px;
        margin: 50px auto;
        text-align: center;
    }

    h1 {
        color: #007bff;
        margin-bottom: 30px;
    }

    .status-message {
        margin-top: 25px;
        padding: 12px;
        border-radius: 5px;
        font-weight: 500;
        font-size: 1.1em;
        border: 1px solid;
    }

    .status-connected {
        background-color: #d4edda;
        color: #155724;
        border-color: #c3e6cb;
    }

    .status-disconnected, .error-message, .write-status.error {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
    }

    .error-message, .write-status.error {
        padding: 12px;
        margin-top: 15px;
        border-radius: 5px;
        font-weight: 500;
        text-align: left;
    }

    input[type="number"] {
        text-align: right;
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        font-size: 1.05em;
        box-sizing: border-box;
    }

    .read-only-value {
        font-weight: bold;
        color: #0056b3;
        text-align: right;
        padding: 10px;
        font-size: 1.05em;
        display: block;
        min-height: 42.5px;
    }

    .write-status {
        margin-top: 15px;
        padding: 10px;
        border-radius: 5px;
        font-weight: 500;
        text-align: left;
        min-height: 1.5em;
    }

        .write-status.success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

    .data-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        table-layout: fixed;
    }

        .data-table th, .data-table td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: center;
            vertical-align: middle;
        }

        .data-table th, .data-table .row-label {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .data-table .row-label {
            text-align: left;
        }

       .register-item {
        margin-bottom: 10px;
        display: flex;
        align-items: center;
       }

        .register-item label {
            flex: 0 0 250px;
            margin-right: 15px;
            font-weight: 600;
            color: #5a6268;
            text-align: left;
        }

        .register-item input, .register-item .read-only-value {
            flex-grow: 1;
        }

    .hmi-btn {
        flex-grow: 1;
        margin-top: 10px;
        padding: 15px;
        font-size: 1.1em;
        font-weight: bold;
        color: white;
        border: 2px solid #343a40;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, visibility 0.3s ease;
    }

    .btn-green {
        background-color: #28a745;
    }

    .btn-red {
        background-color: #dc3545;
    }

    .btn-blue {
        background-color: #007bff;
    }

    .button-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(4, 1fr);
        gap: 10px;
        margin-top: 20px;
    }

    .main-button-container { /* For 3 buttons */
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
    }

    #header-home-link {
        text-decoration: none; /* Removes the underline from the link */
        cursor: pointer;
        color: #007bff; /* Inherits the original H1 color */
        transition: color 0.2s ease;
    }

        #header-home-link:hover h1 {
            color: #0056b3; /* Darkens the color on hover */
        }
</style>

