@section Scripts {
    <script>
        const writeStatusMessageDiv = document.getElementById('writeStatusMessage');
        let registerValues = {
            PointControlRegister: 0,
            StatusBits:0

        };

        const buttonConfig = {

            'btn-rst': {

            actions: [],
            momentarySideEffect: { address: 'M20' },
            statusBit: { register: 'StatusBits', position: 0 }

            },
        'btn-home': {
                actions: [ ],

               redirect: '/Index'
            }

        }
        const allRegisterIds = @Html.Raw(Json.Serialize(Model.GetType().GetProperties().Where(p => p.IsDefined(typeof(Microsoft.AspNetCore.Mvc.BindPropertyAttribute), false) && p.Name != "ConnectionStatus" && p.Name != "ErrorMessage").Select(p => p.Name)));

        function updateUI(data) {
            const statusDiv = document.getElementById('connectionStatus');
            statusDiv.textContent = `Connection Status: ${data.connectionStatus}`;
            statusDiv.className = `status-message ${data.connectionStatus.toLowerCase().includes('connected') ? 'status-connected' : 'status-disconnected'}`;

            const errorDiv = document.getElementById('errorMessage');
            errorDiv.style.display = data.errorMessage ? 'block' : 'none';
            errorDiv.innerHTML = data.errorMessage ? `<strong>Error:</strong> ${data.errorMessage}` : '';

            allRegisterIds.forEach(id => {
                const element = document.getElementById(id);
                const dataKey = id.charAt(0).toLowerCase() + id.slice(1);
                if (!element || data[dataKey] === undefined) return;

                if (element.tagName === 'INPUT' && document.activeElement !== element) {
                    element.value = data[dataKey];
                } else if (element.tagName === 'SPAN') {
                    element.textContent = data[dataKey];
                }
            });
           for (const key in registerValues) {
            const dataKey = key.charAt(0).toLowerCase() + key.slice(1);
            if (data[dataKey] !== undefined) {
                registerValues[key] = data[dataKey];
            }
           }
          


        // --- THIS IS THE CORRECTED LOGIC FOR THE LAMP ---
        const servoErrorIndicator = document.getElementById('ServoCommError');
        if (servoErrorIndicator && data.statusBits !== undefined) {
            // Check BIT 1 for the ServoCommError status
            const isServoErrorOn = (data.statusBits >> 1) & 1;
            servoErrorIndicator.classList.toggle('led-on', isServoErrorOn);
        }
           updateButtonStyles();
        }

                // Add these two functions to your script
        async function performActionsAndAwait(actions) {
            // A Map to store the final calculated value for each register we need to update.
            const registersToUpdate = new Map();

            // Step 1: Loop through all actions to calculate the final value for each register.
            for (const action of actions) {
                if (action.type === 'momentary') continue; // Skip momentary actions

                const registerName = action.register;

                // Get the current value, either from our map if we've already modified it,
                // or from the global state if this is the first time we're seeing this register.
                let currentValue = registersToUpdate.has(registerName)
                    ? registersToUpdate.get(registerName)
                    : registerValues[registerName];

                let newValue = currentValue;
                if (action.type === 'toggle') {
                    newValue ^= (1 << action.position);
                } else if (action.type === 'set') {
                    newValue |= (1 << action.position);
                } else if (action.type === 'reset') {
                    newValue &= ~(1 << action.position);
                }

                // Store the newly calculated value back in our map.
                registersToUpdate.set(registerName, newValue);
            }

            // Step 2: Now that all calculations are done, send one write command for each modified register.
            const writePromises = [];
            for (const [registerName, finalValue] of registersToUpdate) {
                writePromises.push(writeRegister(registerName, finalValue.toString()));
            }

            // Wait for all the unique write commands to complete.
            return Promise.all(writePromises);
        }

        function updateButtonStyles() {
            for (const buttonId in buttonConfig) {
                const config = buttonConfig[buttonId];
                const button = document.getElementById(buttonId);
                if (!button) continue;

                // First, check for 'statusBit' for indicator-style buttons
                if (config.statusBit) {
                    const isBitOn = (registerValues[config.statusBit.register] >> config.statusBit.position) & 1;
                    button.classList.toggle('btn-green', isBitOn);
                    button.classList.toggle('btn-red', !isBitOn);
                }
                // Fallback for regular action buttons if 'statusBit' is not present
                else if (config.actions && config.actions.length > 0) {
                    const action = config.actions.find(a => a.type === 'toggle' || a.type === 'momentary');
                    if (action) {
                        const isBitOn = (registerValues[action.register] >> action.position) & 1;
                        button.classList.toggle('btn-green', isBitOn);
                        button.classList.toggle('btn-red', !isBitOn);
                    } else {
                        button.classList.add('btn-red');
                    }
                }
            }
        }
        async function fetchData() {
            try {
                const response = await fetch('?handler=ReadRegisters');
                if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
                const data = await response.json();
                updateUI(data);
            } catch (error) {
                updateUI({ connectionStatus: "Fetch Error", errorMessage: error.message });
            }
        }

        // --- THIS FUNCTION IS NOW CORRECTED ---
        async function writeRegister(name, value) {
            writeStatusMessageDiv.textContent = `Sending new value for ${name}...`;
            writeStatusMessageDiv.className = 'write-status';
            try {
                // The 'name' variable is already in the correct PascalCase format from the element ID.
                // No conversion is needed.
                const response = await fetch(`?handler=WriteRegister`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value },
                    body: JSON.stringify({ RegisterName: name, Value: value }) // Use 'name' directly
                });
                if (!response.ok) throw new Error(`Server responded with status ${response.status}`);
                const result = await response.json();
                writeStatusMessageDiv.textContent = result.message;
                writeStatusMessageDiv.className = `write-status ${result.status.toLowerCase()}`;
                await fetchData();
            } catch (error) {
                writeStatusMessageDiv.textContent = `Write failed: ${error.message}`;
                writeStatusMessageDiv.className = 'write-status error';
            }
        }

         async function writeBit(address, value) {
            // This function doesn't need to return a complex promise,
            // as it's for a quick side-effect.
            try {
                await fetch(`?handler=WriteBit`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ Address: address, Value: value })
                });
            } catch (error) {
                console.error(`Write bit failed for ${address}:`, error);
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            // Event listener for writable input fields... (this part is correct)
            allRegisterIds.forEach(id => {
                const input = document.getElementById(id);
                if (input && input.tagName === 'INPUT') {
                    input.addEventListener('keydown', (e) => {
                        if (e.key === 'Enter') {
                            e.preventDefault();
                            input.blur();
                            writeRegister(id, input.value);
                        }
                    });
                }
            });

            // --- THIS IS THE COMPLETE, UNIFIED EVENT HANDLER ---
            document.querySelectorAll('.hmi-interactive-btn').forEach(button => {
                const config = buttonConfig[button.id];
                if (!config) return;

                const momentaryAction = config.actions.find(a => a.type === 'momentary');
                const clickActions = config.actions.filter(a => a.type !== 'momentary');

                // --- 1. Handle PRIMARY Momentary Actions (if they exist) ---
                if (momentaryAction) {
                    const pressAction = async () => {
                        // ... condition check logic can be added here if needed ...
                        let newValue = registerValues[momentaryAction.register] | (1 << momentaryAction.position);
                        await writeRegister(momentaryAction.register, newValue.toString());
                    };
                    const releaseAction = async () => {
                        let newValue = registerValues[momentaryAction.register] & ~(1 << momentaryAction.position);
                        await writeRegister(momentaryAction.register, newValue.toString());
                        await fetchData(); // Refresh data on release
                    };

                    button.addEventListener('mousedown', pressAction);
                    button.addEventListener('mouseup', releaseAction);
                    button.addEventListener('mouseleave', releaseAction);
                    button.addEventListener('touchstart', (e) => { e.preventDefault(); pressAction(); });
                    button.addEventListener('touchend', (e) => { e.preventDefault(); releaseAction(); });
                }

                // --- 2. Handle Standard CLICK Actions (toggle, set, reset) ---
                if (clickActions.length > 0 || config.redirect) {
                    button.addEventListener('click', async () => {
                        try {
                            // ... your condition check logic here ...

                            if (clickActions.length > 0) {
                                await performActionsAndAwait(clickActions);
                            }

                            await fetchData(); // Always refresh after a click action

                            if (config.redirect) {
                                window.location.href = config.redirect;
                            }
                        } catch (error) {
                            console.error("Button action failed:", error);
                        }
                    });
                }

                // --- 3. Handle MOMENTARY SIDE-EFFECTS (separate logic) ---
                if (config.momentarySideEffect) {
                    const address = config.momentarySideEffect.address;
                    const press = () => writeBit(address, true);
                    const release = () => writeBit(address, false);

                    button.addEventListener('mousedown', press);
                    button.addEventListener('mouseup', release);
                    button.addEventListener('mouseleave', release);
                    button.addEventListener('touchstart', (e) => { e.preventDefault(); press(); });
                    button.addEventListener('touchend', (e) => { e.preventDefault(); release(); });
                }
            });

            // Initial data fetch and set up recurring update
            fetchData();
            setInterval(fetchData, 1000);
        });
    </script>
